{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "strict": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./build",
    "declaration": true,
    "watch": false,
    "types" : [ "mocha", "node" ],
    "typeRoots": [ "./node_modules/@types" ],
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude":[
    "node_modules",
    "src/tests/**/*"
  ],
  "compileOnSave": false
}
