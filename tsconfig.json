{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./build",
    "declaration": true,
    "watch": false,
    "types" : [ "mocha", "node" ],
    "typeRoots": [ "./node_modules/@types" ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude":[
    "node_modules"
  ],
  "compileOnSave": false
}