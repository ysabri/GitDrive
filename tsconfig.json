{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./build",
    "declaration": true,
    "watch": false,
    "types" : [ "mocha", "node" ],
    "typeRoots": [ "./node_modules/@types" ],
    "baseUrl": "./src",
    "paths": {
      "git/*": ["git-drive/git/*"],
      "models/git/*": ["model/git/*"],
      "utils/*": ["util/*"],
      "app/*": ["git-drive/app/*"],
      "models/app/*" : ["model/app/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude":[
    "node_modules",
    "src/tests/**/*"
  ],
  "compileOnSave": false
}
